{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ 
      {
        "source": "/stops/**",
        "function": "stops"
      },
      {
        "source": "/stops",
        "function": "stops"
      },
      {
        "source": "/stop/*",
        "function": "stops"
      },
      {
        "source": "/configs/**",
        "function": "configs"
      },
      {
        "source": "/configs",
        "function": "configs"
      },
      {
        "source": "/config/*",
        "function": "configs"
      },
      {
        "source": "/configuration/*",
        "function": "configs"
      }  
    ]
  }
}
